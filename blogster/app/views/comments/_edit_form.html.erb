<%= form_for(@comment) do |f| %>
  <%= f.hidden_field :post_id %>
  <%= f.hidden_field :user %>

  <%= render 'error_messages' %>

  <div class="form-container">
    <%= f.label :user %>: <%= @comment.user %>
    <br>
    <%= f.text_area :content, size: "128", placeholder: "Type the comment here" %>
    <br>
    <%= f.submit %>
  </div>
<% end %>