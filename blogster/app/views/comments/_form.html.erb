<% if user_signed_in? %>
  <%= form_for(@comment) do |f| %>
    <%= f.hidden_field :post_id %>
    <%= f.hidden_field :user_id %>

    <%= render 'error_messages' %>

    <div class="form-container">
      Commenting as <strong><%= current_user.name %></strong>
      <br>
      <%= f.text_area :content, size: "128", placeholder: "Type your comment here" %>
      <br>
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <%= link_to "Sign in to add a comment", new_user_session_path, class: "btn btn-default post-add-comment-button" %>
<% end %>