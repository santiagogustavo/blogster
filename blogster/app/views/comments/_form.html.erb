<%= form_for(@comment) do |f| %>
  <%= f.hidden_field :post_id %>

  <%= render 'error_messages' %>

  <div class="form-container">
    <%= f.label :user %>
    <br>
    <%= f.text_field :user, placeholder: "Type your user name here" %><br>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, size: "128", placeholder: "Type the comment here" %>
    <br>
    <%= f.submit %>
  </div>
<% end %>