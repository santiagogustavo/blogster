<%= form_for(@post) do |f| %>
  <%= render 'error_messages' %>

  <div class="form-container">
    <% @selected = params[:category] ? Category.friendly.find(params[:category]).id : nil %>

    <%= f.collection_select :category, Category.all, :id, :name, prompt: "Choose a category", selected: @selected %>
    <%= render 'shared/buttons/create_category' %>
    <br>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title, placeholder: "Type the post title here" %><br>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, size: "60x12", placeholder: "Type the post text here" %>
    <br>
    <%= f.submit %>
  </div>
<% end %>