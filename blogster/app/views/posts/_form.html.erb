<%= form_for @post, html: { multipart: true } do |f| %>
  <% @selected = params[:category] ? Category.friendly.find(params[:category]).id : @post.category_id %>
  <%= render 'error_messages' %>

  <div class="form-container">
    <div class="inline-container">
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Choose a category", selected: @selected %>
      <%= render 'shared/buttons/create_category' %>
    </div>
    <br>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <br>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Type the post title here" %>
    <br>
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "60x12", placeholder: "Type the post text here" %>
    <br>
    <%= f.submit %>
  </div>
<% end %>