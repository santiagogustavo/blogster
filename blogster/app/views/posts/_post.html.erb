<div class="panel panel-default post-cell">
  <div class="post-image">
    <% if post.image_url.to_s.empty? %>
      <%= render 'shared/placeholder/post' %>
    <% else %>
      <%= image_tag post.image_url.to_s, alt: "Post image", class: "img-responsive" %>
    <% end %>
  </div>
  <div class="post-content">
    <div class="post-content-container">
      <div class="inline-container line-truncate">
        <h2> <%= link_to post.title, post %> </h2>
        <i class="post-stats">
          <%= post.created_at.strftime("%d/%m/%y") %>
          by <%= User.find(post.user_id).name %>
          in <%= Category.find(post.category_id).name %>
        </i>
      </div>
      <div class="line-truncate">
        <p> <%= post.content %> </p>
      </div>
    </div>
  </div>
</div>