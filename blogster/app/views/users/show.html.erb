<div class="user-avatar">
  <%= render 'avatar' %>
</div>

<section class="user-stats">
  <div class="inline-container">
    <h1><%= @user.name %></h1>
    <p class="created-at"><i>Since <%= @user.created_at.strftime("%d/%m/%y, %H:%M:%S")  %></i></p>
  </div>
  <p>
    <strong>Last signed in:</strong>
    <%= @user.last_sign_in_at.strftime("%d/%m/%y, %H:%M:%S") if @user.last_sign_in_at %>
  </p>
  <p><strong>Posts:</strong> <%= @user.posts.count %></p>
  <p><strong>Comments:</strong> <%= @user.comments.count %></p>
</section>

<hr/>

<% unless @user.posts.empty? %>
  <h3>Posts</h3>
  <section class="post-list">
    <%= render @user.posts.sort.reverse %>
  </section>
<% end %>

<hr/>

<% unless @user.comments.empty? %>
  <h3>Comments</h3>
  <section class="comment-list">
    <%= render @user.comments.sort.reverse, link_posts: true %>
  </section>
<% end %>